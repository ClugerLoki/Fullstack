// monitor.js
const fs = require('fs');
const path = require('path');

const dir = './watchedDir';

if (!fs.existsSync(dir)) {
  fs.mkdirSync(dir);
}

fs.watch(dir, (eventType, filename) => {
  if (filename) {
    console.log(`[${new Date().toLocaleTimeString()}] ${filename} was ${eventType}`);
  }
});
